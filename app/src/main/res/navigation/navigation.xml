<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/homeFragment2">

    <fragment
            android:id="@+id/homeFragment2"
            android:name="com.example.movieapp.movie.home.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home">
        <action
                android:id="@+id/action_home_to_detail"
                app:destination="@id/detailFragment2" />
    </fragment>
    <fragment
            android:id="@+id/detailFragment2"
            android:name="com.example.movieapp.movie.home.DetailFragment"
            android:label="DetailFragment" />
    <fragment
            android:id="@+id/aboutFragment"
            android:name="com.example.movieapp.movie.home.AboutFragment"
            android:label="fragment_about"
            tools:layout="@layout/fragment_about" />
    <fragment
            android:id="@+id/watchlistFragment"
            android:name="com.example.movieapp.movie.home.WatchlistFragment"
            android:label="fragment_watchlist"
            tools:layout="@layout/fragment_watchlist" />
</navigation>