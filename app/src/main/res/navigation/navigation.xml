<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/homeFragment2">

    <fragment
            android:id="@+id/homeFragment2"
            android:name="com.example.movieapp.movie.fragments.HomeFragment"
            android:label="Home"
            tools:layout="@layout/fragment_home">
        <action
                android:id="@+id/action_home_to_detail"
                app:destination="@id/detailFragment2" />
        <action
                android:id="@+id/action_homeFragment2_to_quizFragment"
                app:destination="@id/quizFragment" />
    </fragment>
    <fragment
            android:id="@+id/detailFragment2"
            android:name="com.example.movieapp.movie.fragments.DetailFragment"
            android:label="Movie" >
        <argument
                android:name="movie"
                app:argType="com.example.movieapp.movie.data.Movie" />
    </fragment>
    <fragment
            android:id="@+id/aboutFragment"
            android:name="com.example.movieapp.movie.fragments.AboutFragment"
            android:label="About"
            tools:layout="@layout/fragment_about" />
    <fragment
            android:id="@+id/watchlistFragment"
            android:name="com.example.movieapp.movie.fragments.WatchlistFragment"
            android:label="Watchlist"
            tools:layout="@layout/fragment_watchlist" />

    <fragment
            android:id="@+id/quizFragment"
            android:name="com.example.movieapp.quiz.fragment.QuizFragment"
            tools:layout="@layout/fragment_quiz"
            android:label="QuizFragment" >
        <action
                android:id="@+id/action_quizFragment_to_quizEndFragment"
                app:destination="@id/quizEndFragment"
                app:popUpTo="@id/homeFragment2" />
    </fragment>
    <fragment
            android:id="@+id/quizEndFragment"
            android:name="com.example.movieapp.quiz.fragment.QuizEndFragment"
            tools:layout="@layout/fragment_quiz_end"
            android:label="QuizEndFragment" >
        <argument
                android:name="score"
                app:argType="integer" />
        <action
                android:id="@+id/action_quizEndFragment_to_quizFragment"
                app:destination="@id/quizFragment"
               />
        <argument
                android:name="maxScore"
                app:argType="integer" />
    </fragment>
</navigation>