<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222121"
            android:layout_marginTop="10dp">

        <TextView
                android:text="@string/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_home_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:textColor="#FBFBFB"
                android:textSize="30sp"
                android:textStyle="bold" />

        <TextView
                android:text="@string/txt_creator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_home_creators"
                app:layout_constraintTop_toBottomOf="@+id/txt_home_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="#F3F3F3"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />

        <TextView
                android:text="@string/txt_actor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_home_actors"
                app:layout_constraintTop_toBottomOf="@+id/txt_home_creators"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"
                android:textSize="14sp" />

        <Button
                android:text="@string/see_details"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:id="@+id/btn_home_details"
                app:layout_constraintTop_toBottomOf="@+id/txt_home_actors"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="280dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColorHint="#C50404"
                android:textColor="#FBFBFB"
                app:backgroundTint="#F8972F"
                android:textSize="14sp"
                android:paddingLeft="0sp"
                android:paddingTop="0sp"
                android:paddingRight="0sp"
                app:iconPadding="0sp"
                android:padding="0sp"
                android:paddingBottom="0sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>