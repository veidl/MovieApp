<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <data>
        <variable
                name="quizEndViewModel"
                type="com.example.movieapp.quiz.viewmodel.QuizEndViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constaintLayout"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="match_parent"
            tools:context=".QuizEndFragment">


        <TextView
                android:id="@+id/txt_score"
                android:textColor="#F8972F"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/txt_quiz_end_end_score"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginTop="100dp"
                android:textSize="30sp"
                android:gravity="center" />

        <TextView
                android:id="@+id/txt_user_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF9800"
                android:text="@{String.format(@string/default_score, quizEndViewModel.score, quizEndViewModel.maxScore)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_score"
                app:layout_constraintVertical_bias="0.050000012"
                android:gravity="center"
                android:textSize="20sp" />

        <Button
                android:text="@string/restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_quiz_restart"
                app:layout_constraintTop_toBottomOf="@+id/txt_user_score"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:rippleColor="#F8972F"
                android:background="#FFFFFF"
                app:backgroundTint="#FF9800" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>